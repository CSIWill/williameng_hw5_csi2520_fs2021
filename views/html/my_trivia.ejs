    <main>
        <% var score=0;%>

            <h1>My Trivia</h1>
            <section>
                <ol id="quiz">
                    <form action="/my_trivia/" method="post">
                    <li>
                        <h2>If you have 5 apples in 3 buckets, how many buckets do you have?</h2>
                        <ol>
                            <li>2 bananas</li>
                            <li>3 strawberries</li>
                            <li>3 buckets</li>
                            <li>5 apples</li>
                        </ol>
                        <label for="userAnswer1">Enter Answer Here:</label>
                        <input type="text" name="userAnswer1"></input>
                        <h3>
                            <%= `You entered ${urAnswer1}`%>
                                <% if (urAnswer1==3) { %>
                                    <% score++; %>
                                    
                                        <%} %>
                        </h3>
                    </li>
                    <li>
                        <h2>What is the circumference of the Earth?</h2>
                        <ol>
                            <li>20,000 mi</li>
                            <li>40,075 km</li>
                            <li>53,825,760 yd</li>
                            <li>1.21477e+8 ft</li>
                        </ol>
                        <label for="userAnswer2">Enter Answer Here:</label>
                        <input type="text" name="userAnswer2"></input>
                        <h3>
                            <%= `You entered ${urAnswer2}`%>
                                <% if (urAnswer2==2) { %>
                                    <% score++; %>
                                    
                                        <%} %>
                        </h3>
                    </li>
                    <li>
                        <h2>Which is not a unit of pressure?</h2>
                        <ol>
                            <li>mmHg</li>
                            <li>torr</li>
                            <li>psi</li>
                            <li>slugs</li>
                        </ol>
                        <label for="userAnswer3">Enter Answer Here:</label>
                        <input type="text" name="userAnswer3"></input>
                        <h3>
                            <%= `You entered ${urAnswer3}`%>
                                <% if (urAnswer3==4) { %>
                                    <% score++; %>
                                    
                                        <%} %>
                        </h3>
                    </li>
                    <li>
                        <h2>Which is not a programming language?</h2>
                        <ol>
                            <li>Python</li>
                            <li>Node.js</li>
                            <li>JavaScript</li>
                            <li>C++</li>
                        </ol>
                        <label for="userAnswer4">Enter Answer Here:</label>
                        <input type="text" name="userAnswer4"></input>
                        <h3>
                            <%= `You entered ${urAnswer4}`%>
                                <% if (urAnswer4==2) { %>
                                    <% score++; %>
                                    
                                        <%} %>

                        </h3>
                    </li>
                    <li>
                        <h2>FDA's caffeine limit a day?</h2>
                        <ol>
                            <li>1,000 mg</li>
                            <li>500 mg</li>
                            <li>400 mg</li>
                            <li>200 mg</li>
                        </ol>
                        <label for="userAnswer5">Enter Answer Here:</label>
                        <input type="text" name="userAnswer5"></input>
                        <h3>
                            <%= `You entered ${urAnswer5}`%>
                                <% if (urAnswer5==3) { %>
                                    <% score++; %>
                                    
                                        <%} %>
                        </h3>
                    </li>
                    <br>
                    <button type="submit" id="submitAnswer">Submit Answer</button>
                    </form>
                </ol>
                <div id="score">
                    <h2>Your Score is: </h2>
                    <%= score%>
                </div>

            </section>

    </main>
